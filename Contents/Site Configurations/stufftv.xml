<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.stuff.tv/"
	plugin="http://c.brightcove.com/services/viewer*"
	initialState="playing"
	version="1.0"
	identifier="com.plexapp.plugins.stufftv">
    
	<!-- Playing -->
	<state name="playing">
		<event>
        	<condition>
				<frameLoaded />
			</condition>

        	<action>
                <pause time="3000" />
                <click x="43" y="251" />
                
                <!-- It appears that the controls will remain visible until another -->
                <!-- mouse event occurs. We therefore simply send another click to  -->
                <!-- a different location of the screen. -->
                <pause time="1000" />
                <click x="43" y="151" />
        	</action>
    	</event>
        <event>
        	<condition>
				<command name="pause" />
			</condition>

        	<action>
                <click x="43" y="251" />
				<goto state="paused" />
        	</action>
    	</event>
	</state>
    
    <!-- Paused -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
                <click x="43" y="251" />
                
                <!-- It appears that the controls will remain visible until another -->
                <!-- mouse event occurs. We therefore simply send another click to  -->
                <!-- a different location of the screen. -->
                <pause time="1000" />
                <click x="43" y="151" />
				<goto state="playing" />
			</action>
		</event>
	</state>

</site>